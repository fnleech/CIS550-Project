// Jade file to specify output of a persons list
// Inherits from layout
extends layout
block navbarcontent

block content
  p
    table
      - for (var inx = 0; inx < results.length; inx++)
        tr
          td=results[inx].CID+" "
          td &nbsp;
          td=results[inx].NAME
          td &nbsp;
          td=results[inx].CONTINENT
          td &nbsp;
          td=results[inx].POPULATION
          td &nbsp;
          td=results[inx].GDP
          td &nbsp;
          td=results[inx].PM10
          td &nbsp;
          td=results[inx].PM25
  // Put a click button that lets us return to the index page 
  form(method='get', action='/')
      input(type='submit', value='Return')
